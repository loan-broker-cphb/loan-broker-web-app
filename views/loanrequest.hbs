<form method="post" action="/loanrequest">
  <h3>LOAN REQUEST:</h3><br>
  <div class="form-group">
    <div class="form-group row">
      <div class="col-xs-5">
        <label for="ssn" class="col-2 col-form-label">SSN</label>
        <input class="form-control" type="text" placeholder="ddmmyy-xxxx" name="ssn" required>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-5">
        <label for="loanamount" class="col-2 col-form-label">Loan Amount</label>
        <input class="form-control" type="text" placeholder="loan amount" name="loanAmount" required>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-xs-5">
        <label for="loan duration" class="col-2 col-form-label">Loan Duration (months)</label>
        <input class="form-control" type="number" placeholder="loan duration" name="loanDuration" required>
      </div>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
